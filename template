<script>
  // Fade out splash after page load
  window.addEventListener("load", function() {
    const splash = document.getElementById('logo-splash');
    setTimeout(() => {
      splash.style.opacity = 0; // fade out
      setTimeout(() => splash.style.display = 'none', 1000); // remove after fade
    }, 1500); // splash visible duration
  });
</script>


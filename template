<script>
  const servicesBtn = document.getElementById("servicesBtn");
  const servicesMenu = document.getElementById("servicesMenu");
  const cats = document.querySelectorAll("[data-panel]");
  const panels = document.querySelectorAll(".service-panel");

  // Toggle dropdown on click
  servicesBtn.addEventListener("click", (e) => {
    e.stopPropagation();
    servicesMenu.classList.toggle("hidden");
  });

  // Show panel when hovering a category
  cats.forEach(cat => {
    cat.addEventListener("mouseenter", () => {
      panels.forEach(p => p.classList.add("hidden"));
      document.getElementById(cat.dataset.panel).classList.remove("hidden");
    });
  });

  // Hide when clicking outside
  document.addEventListener("click", (e) => {
    if (!servicesMenu.contains(e.target) && !servicesBtn.contains(e.target)) {
      servicesMenu.classList.add("hidden");
    }
  });

  // Default: all panels hidden
  panels.forEach(p => p.classList.add("hidden"));
</script>

